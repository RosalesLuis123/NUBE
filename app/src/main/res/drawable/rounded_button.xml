<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Efecto al presionar el botón -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#01579B"/> <!-- Cambiar el color de fondo al presionar -->
            <corners android:radius="16dp"/> <!-- Borde redondeado -->
            <stroke android:color="#FFFFFF" android:width="2dp"/>
        </shape>
    </item>

    <!-- Efecto normal (cuando no está presionado) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0277BD"/> <!-- Color normal del fondo -->
            <corners android:radius="16dp"/>
            <stroke android:color="#FFFFFF" android:width="2dp"/>
        </shape>
    </item>

</selector>